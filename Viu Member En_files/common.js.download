	//µÇÂ¼ÏÂÀ­²Ëµ¥
	var dropMenu = {
		timer: null,
		showMenu: function(){
			clearTimeout(this.timer);
			$('.user-menu').show();
			$('.user-login').addClass('v-user-on');
		},
		hideMenu: function(){
			clearTimeout(this.timer);
			this.timer = setTimeout(function(){
				$('.user-menu').hide();
				$('.user-login').removeClass('v-user-on');
			}, 200);
		}
	};
	$('.user-login').bind({
		mouseenter: function(){
			dropMenu.showMenu();
		},
		mouseleave: function(){
			dropMenu.hideMenu();
		}
	});
	$('.user-menu').bind({
		mouseenter: function(){
			dropMenu.showMenu();
		},
		mouseleave: function(){
			dropMenu.hideMenu();
		}
	});
	
})